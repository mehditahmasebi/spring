<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.tahmasebi</groupId>
	<artifactId>spring-kickstart</artifactId>
	<version>1.4.0</version>
	<packaging>war</packaging>
	<name>spring-kickstart</name>
	<description>spring kickstart without Sprint boot</description>

	<properties>
	  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  		<project.build.outputEncoding>UTF-8</project.build.outputEncoding>  	
		<springframework.version>4.3.16.RELEASE</springframework.version>
		<springframework.security.version>5.2.1.RELEASE</springframework.security.version>
		<resource1>${project.basedir}/src/resources</resource1>
		<resource2>${project.basedir}/resource</resource2>
	</properties>
	
	<build>
		<finalName>${project.artifactId}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>${resource1}</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>${resource2}</directory>
				<filtering>true</filtering>			
			</resource>
		</resources>
		
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>copy-resources-1</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.basedir}/target/${project.artifactId}/WEB-INF/classes</outputDirectory>
							<resources>
								<resource>
									<directory>${resource1}</directory>
								</resource>
								<resource>
									<directory>${resource2}</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>


			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<executions>
				</executions>
				<configuration>
					<webResources>
					</webResources>
					<warSourceDirectory>WebContent</warSourceDirectory>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<outputDirectory>${env.JBOSS_HOME}/standalone/deployments</outputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
